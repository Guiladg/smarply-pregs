{
   "compilerOptions": {
      "outDir": "./build",
      "rootDir": "./src",
      "baseUrl": "./",
      "module": "commonjs",
      "target": "esnext",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "lib": [
            "ES5",
            "ES6",
            "DOM"
      ]
   },
   "exclude": ["./node_modules"]
 }